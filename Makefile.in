version = @version@
python = @python@
prefix = @prefix@
bindir = @bindir@
moddir = @moddir@
mandir = @mandir@

###  standard targets

# The conditionals about man/Makefile are useful because this file is present
# in the CVS version only.

all:
ifneq ($(wildcard man/Makefile),)
	@make -C man all
endif
	@python@ setup.py build

clean:
	rm -rf build dist MANIFEST
	find \( -name '*~' -or -name '*.py[co]' \) -exec rm {} \;

distclean: clean
ifneq ($(wildcard man/Makefile),)
	@make -C man distclean
endif
	rm -f Makefile rubber settings.py src/version.py

install:
	@python@ setup.py inst ${prefix}

###  distribution-related targets

sdist:
	rm -f MANIFEST
ifneq ($(wildcard man/Makefile),)
	@make -C man all
endif
	@python@ setup.py sdist

deb: sdist
	cd dist ; tar zxf rubber-@version@.tar.gz 
	cp -r debian dist/rubber-@version@/
	rm -rf dist/rubber-@version@/debian/CVS
	cd dist/rubber-@version@ ; dpkg-buildpackage -rfakeroot
